<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (typeof errors !== 'undefined' && errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li class="text-error-red"><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form class="form-box" action="/inv/management/add-inventory" method="post">
    <div class="form-group-vertical form-group-md-horizontal">
        <div class="form-item">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" required />
        </div>
        <div class="form-item">
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" required />
        </div>
        <div class="form-item">
            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" required />
        </div>
    </div>
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required></textarea>
    <label for="inv_image">Full-size Image URL:</label>
    <input type="text" id="inv_image" name="inv_image" required />
    <label for="inv_thumbnail">Thumbnail Image URL:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required />
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required />
    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" required />
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" required />
    <% if (typeof classificationList !== 'undefined' && classificationList) { %>
        <label for="classification_id">Classification:</label>
        <%- classificationList %>
    <% } else { %>
        <p>No classifications were received from the server</p>
    <% } %>
    <button type="submit" class="button-primary">Add</button>
</form>