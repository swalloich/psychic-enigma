<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<form class="login-box">
    <div class="form-row">
        <label for="username_field">Username:</label>
        <input type="text" id="username_field" required />
    </div>
    <div class="form-row">
        <label for="password_field">Password:</label>
        <input type="text" id="password_field" required />
    </div>
</form>